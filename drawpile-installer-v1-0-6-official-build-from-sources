if [ "$state" != "" ]; then
  echo "Selected: $state"
else
  state="Some-State"
fi
echo
echo '--------------------------------------------------------------------------------'
echo
echo 'Locality name (e.g., city) [Some-City]:'
echo
read locality
echo
if [ "$locality" != "" ]; then
  echo "Selected: $locality"
else
  locality="Some-City"
fi
echo
echo '--------------------------------------------------------------------------------'
echo
echo 'Organization Name (eg, company) [Internet Widgits Pty Ltd]:'
