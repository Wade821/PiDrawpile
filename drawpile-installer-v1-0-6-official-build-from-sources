announceWhiteList = true

[announceWhitelist]
https://drawpile.net/api/sessions/

[ipbans]

[users]
$username:plain;$password;MOD,HOST" > /home/drawpileuser/config.txt
sudo chmod 777 /home/drawpileuser/config.txt
sudo chmod 755 /home/drawpileuser/!(ssl.sh)
