)
				rpi_increment=3
				rpi_start=$(($rpi_start + $rpi_increment))
			}

			function rpi_monitor_drawpile-srv.socket () {			
				DYN_DP_SRV_SOCK_01=$(($rpi_start))
				DYN_DP_SRV_SOCK_02=$(($rpi_start+1))
				DYN_DP_SRV_SOCK_03=$(($rpi_start+2))
				
