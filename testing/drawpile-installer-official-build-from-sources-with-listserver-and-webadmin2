				rpi_start=$(($rpi_start + $rpi_increment))
			}
			
			if [ "$dp_srv_startup" == "1" ]; then
				# 1 - Socket Activation
				rpi_monitor_drawpile-srv.service
				rpi_monitor_drawpile-srv.socket
			elif [ "$dp_srv_startup" == "2" ]; then
				# 2 - Always on Service
