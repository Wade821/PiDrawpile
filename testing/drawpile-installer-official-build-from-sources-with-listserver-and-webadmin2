	fi
	wait $!
	sudo chmod 777 "$option_loc_2/trusted_shortcuts.sh"
	wait $!
	su -c "$option_loc_2/trusted_shortcuts.sh" $current_username
	wait $!
	sudo rm -rf $option_loc_2/trusted_shortcuts.sh
