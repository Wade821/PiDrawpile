		else
			echo "${bold}${cyan}Left blank. Will not show NSFM sessions on list server web page.${normal}"
			sudo sed -i -e "s/list-url=\"\/listing\/sessions\/?nsfm=true\"/list-url=\"\/listing\/sessions\/\"/g" /var/www/html/drawpile/index.html
