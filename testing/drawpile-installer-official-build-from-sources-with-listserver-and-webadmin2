			# 1 - Socket Activation
			# 2 - Always on Service

			function rpi_monitor_drawpile-srv.service () {
				DYN_DP_SRV_SVC_01=$(($rpi_start))
				DYN_DP_SRV_SVC_02=$(($rpi_start+1))
				DYN_DP_SRV_SVC_03=$(($rpi_start+2))
			
